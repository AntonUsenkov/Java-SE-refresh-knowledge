public class Dog {
	// if I wouldn add a value, the check returned a value of zero.
	public static String name = "cwec";
	public static String says = "wefe";
	public static void main (String args[]) {
		System.out.println(name + " " + says);
		Dog dog1 = new Dog();
		dog1.name = "Spot";
		dog1.says = "'Ruff!'";
		Dog dog2 = new Dog();
		dog2.name = "Scruffy";
		dog2.says = "'Wurf!'";
		System.out.println("Dog, whose name " + dog1.name + " says: " + dog1.says + " and, dog, whose name " + dog2.name + " says: " + dog2.says );
	}
}
