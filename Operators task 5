public class Dog {
	public String name;
	public String says;
	
	public static void main (String args[]) {
		Dog dog1 = new Dog();
		dog1.name = "Spot";
		dog1.says = "'Ruff!'";
		Dog dog2 = new Dog();
		dog2.name = "Scruffy";
		dog2.says = "'Wurf!'";
		System.out.println("Dog, whose name " + dog1.name + " says: " + dog1.says + " and, dog, whose name " + dog2.name + " says: " + dog2.says );
	}
}
